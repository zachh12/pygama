            {"wfout":"wf_atrap", "wfin":"wf_notch", "rise":0.04, "flat":0.1, "fall":2}
        ],
        "current" : {"wfin":"wf_blsub", "wfout":"wf_current", "sigma":5},
        "get_max" : [
            {"wfin":"wf_etrap"}, {"wfin":"wf_atrap"}, {"wfin":"wf_current"},
            {"wfin":"wf_savgol"},{"wfin":"wf_blsub"}
